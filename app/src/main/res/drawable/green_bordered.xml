<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <solid android:color="#87BF7A" />
            <corners android:radius="10dp"></corners>
        </shape>
    </item>

    <!-- This is for border bottom but you can change this according to your need -->
    <item android:left="10dp" >
        <shape android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="#BFC1C3" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>